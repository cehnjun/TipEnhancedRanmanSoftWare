<Window xmlns:pt="http://propertytools.org/wpf"  xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="TERS.ColorAxisChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TERS"
        mc:Ignorable="d"
        Title="ColorAxisChange" Height="90" Width="500"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <StackPanel Margin="5,5,5,5">
        <pt:HeaderedEntrySlider Value="{Binding LowerValue}" Margin="0,0,0,3" Minimum="0" Maximum="100" EntryWidth="40" Header="Lower Percent" HeaderWidth="100"/>
        <pt:HeaderedEntrySlider Value="{Binding HigherValue}" Minimum="0" Maximum="100" EntryWidth="40" Header="Higher Percent" HeaderWidth="100" />
    </StackPanel>
</Window>
